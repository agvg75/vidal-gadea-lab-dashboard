<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editable Vidal-Gadea Lab Student Database</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }
        h1 {
            color: #2c3e50;
            text-align: center;
        }
        .summary {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }
        .summary div {
            background-color: white;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            text-align: center;
            width: 18%;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #34495e;
            color: white;
        }
        td {
            vertical-align: top;
        }
        tr:hover {
            background-color: #f8f9fa;
        }
        td[contenteditable="true"] {
            background-color: #e8f0fe;
        }
        .add-btn, .save-btn {
            padding: 8px 15px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }
        .add-btn:hover, .save-btn:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>

<h1>Editable Vidal-Gadea Lab Student Database</h1>

<div class="summary">
    <div><strong>Total Students:</strong><br><span id="totalStudents">0</span></div>
    <div><strong>PostDocs:</strong><br><span id="totalPostDocs">0</span></div>
    <div><strong>Graduate:</strong><br><span id="totalGraduate">0</span></div>
    <div><strong>Undergraduate:</strong><br><span id="totalUndergraduate">0</span></div>
    <div><strong>High School:</strong><br><span id="totalHighSchool">0</span></div>
</div>

<button class="add-btn" onclick="addRow()">Add New Student</button>
<button class="save-btn" onclick="saveTable()">Save Changes</button>

<table id="studentTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Level</th>
            <th>Status</th>
            <th>Current Position</th>
            <th>STEM?</th>
            <th>Pubs</th>
            <th>Posters</th>
            <th>Talks</th>
            <th>Research/Notes</th>
        </tr>
    </thead>
    <tbody contenteditable="true">
        <!-- Data integration placeholder -->
<tr><td contenteditable="true">Carola Stadele</td><td contenteditable="true">PostDoc</td><td contenteditable="true">Former</td><td contenteditable="true">Group Leader University of G√∂ttingen Germany</td><td contenteditable="true">Yes</td><td contenteditable="true">2</td><td contenteditable="true">7</td><td contenteditable="true">2</td><td contenteditable="true">Several awards. Now group leader in Germany</td></tr>
<tr><td contenteditable="true">Jessica Adams</td><td contenteditable="true">PostDoc</td><td contenteditable="true">Former</td><td contenteditable="true">Research scientist University of Tennessee</td><td contenteditable="true">Yes</td><td contenteditable="true">1</td><td contenteditable="true">4</td><td contenteditable="true">0</td><td contenteditable="true">Postdoc alumna</td></tr>
<tr><td contenteditable="true">Tope Awe</td><td contenteditable="true">Graduate</td><td contenteditable="true">Current</td><td contenteditable="true">PhD Candidate</td><td contenteditable="true">Paused</td><td contenteditable="true">2</td><td contenteditable="true">10</td><td contenteditable="true">3</td><td contenteditable="true">AMsh glia modulation magnetic coding projects. Multiple 2021-2024 presentations. Expected graduation F25</td></tr>
<tr><td contenteditable="true">Mackenzie Jones</td><td contenteditable="true">Graduate</td><td contenteditable="true">Current</td><td contenteditable="true">MS Candidate</td><td contenteditable="true">Continuing</td><td contenteditable="true">1</td><td contenteditable="true">3</td><td contenteditable="true">1</td><td contenteditable="true">Muscular expression of pezo-1</td></tr>
<tr><td contenteditable="true">Damiano Marchiafava</td><td contenteditable="true">Graduate</td><td contenteditable="true">Current</td><td contenteditable="true">PhD Candidate</td><td contenteditable="true">Continuing</td><td contenteditable="true">2</td><td contenteditable="true">12</td><td contenteditable="true">2</td><td contenteditable="true">Human DMD muscle cells calcium dynamics. Multiple 2023-2024 presentations including ASCB meeting</td></tr>
<!-- Additional records truncated for brevity -->
    </tbody>
</table>

<script>
    function addRow() {
        const table = document.getElementById('studentTable').getElementsByTagName('tbody')[0];
        const newRow = table.insertRow();
        for (let i = 0; i < 9; i++) {
            const cell = newRow.insertCell(i);
            cell.contentEditable = "true";
            cell.innerText = "";
        }
        updateSummary();
    }

    function saveTable() {
        const table = document.getElementById('studentTable');
        const rows = table.rows;
        let data = [];

        for (let i = 1; i < rows.length; i++) {
            const cells = rows[i].cells;
            let rowData = [];
            for (let j = 0; j < cells.length; j++) {
                rowData.push(cells[j].innerText);
            }
            data.push(rowData);
        }

        localStorage.setItem('studentDatabase', JSON.stringify(data));
        alert('Data saved locally!');
        updateSummary();
    }

    function loadTable() {
        const data = JSON.parse(localStorage.getItem('studentDatabase'));
        if (data) {
            const table = document.getElementById('studentTable').getElementsByTagName('tbody')[0];
            table.innerHTML = '';

            data.forEach(rowData => {
                const newRow = table.insertRow();
                rowData.forEach(cellData => {
                    const cell = newRow.insertCell();
                    cell.contentEditable = "true";
                    cell.innerText = cellData;
                });
            });
        }
        updateSummary();
    }

    function updateSummary() {
        const table = document.getElementById('studentTable').getElementsByTagName('tbody')[0];
        const rows = table.rows;
        let total = rows.length, postdocs = 0, grads = 0, undergrads = 0, highschool = 0;

        for (let row of rows) {
            let level = row.cells[1].innerText.toLowerCase();
            if (level.includes('postdoc')) postdocs++;
            else if (level.includes('graduate')) grads++;
            else if (level.includes('undergraduate')) undergrads++;
            else if (level.includes('high school')) highschool++;
        }

        document.getElementById('totalStudents').innerText = total;
        document.getElementById('totalPostDocs').innerText = postdocs;
        document.getElementById('totalGraduate').innerText = grads;
        document.getElementById('totalUndergraduate').innerText = undergrads;
        document.getElementById('totalHighSchool').innerText = highschool;
    }

    window.onload = loadTable;
</script>

</body>
</html>

